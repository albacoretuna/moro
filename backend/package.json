{
  "name": "backend",
  "version": "1.0.0",
  "description": "Moro backend",
  "main": "./src/server.ts",
  "scripts": {
    "prestart": "npm run configure-db",
    "start": "concurrently --handle-input npm:watch-node npm:watch-graphql",
    "watch-node": "nodemon ./src/server.ts",
    "watch-graphql": "graphql-codegen --watch 'src/**/*.gql'",
    "generate-types": "graphql-codegen",
    "configure-db": "npx prisma migrate dev --preview-feature"
  },
  "keywords": [],
  "author": "Artingle",
  "license": "MIT",
  "dependencies": {
    "@graphql-tools/load-files": "^6.2.5",
    "@graphql-tools/merge": "^6.2.6",
    "@prisma/client": "^2.13.0",
    "apollo-server": "^2.19.0",
    "apollo-server-express": "^2.19.0",
    "bcrypt": "^5.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "graphql": "^15.4.0",
    "graphql-tools": "^7.0.2",
    "helmet": "^4.2.0",
    "jsonwebtoken": "^8.5.1",
    "nanoid": "^3.1.20",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.20.0",
    "@graphql-codegen/typescript": "^1.19.0",
    "@graphql-codegen/typescript-resolvers": "^1.18.0",
    "@prisma/cli": "^2.13.0",
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.9",
    "@types/express-jwt": "^6.0.0",
    "@types/node": "^14.14.11",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.2"
  }
}
